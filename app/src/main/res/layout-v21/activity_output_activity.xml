<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0665A9"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.supratim.ntes.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:visibility="visible"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ser" />

        <TextView
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/south_eastern_railway"
            />
    </android.support.v7.widget.Toolbar>
    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
    android:background="#0665A9"
    android:id="@+id/tablay"

    android:layout_margin="2dp"
    android:stretchColumns="1"
        tools:ignore="UnknownId">
    <TableRow
        android:background="#0665A9">
        <TextView
            android:text="@string/div_dept"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:background="@drawable/borders"
            />
        <TextView
            android:text="@string/place_period"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:background="@drawable/borders"
            />
        <TextView
            android:text="@string/training_name"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:background="@drawable/borders"
            />
    </TableRow>
</TableLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tablay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="@string/back" />


</RelativeLayout>