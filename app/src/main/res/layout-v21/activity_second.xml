<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0665A9"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.supratim.ntes.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:visibility="visible"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ser" />

        <TextView
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/south_eastern_railway" />
    </android.support.v7.widget.Toolbar>

    <Spinner
        android:id="@+id/spin_Division"
        android:layout_width="match_parent"
        android:background="@drawable/spin_bord"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:dropDownVerticalOffset="35dp"
        android:spinnerMode="dialog"
        android:dropDownWidth="match_parent"
        android:prompt="@string/select_division"/>
    <Spinner
        android:id="@+id/spin_Department"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/spin_bord"
        android:prompt="@string/Select_Department"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dialog"
        android:dropDownVerticalOffset="35dp" />
    <Spinner
        android:id="@+id/spin_TrCentre"
        android:background="@drawable/spin_bord"
        android:prompt="@string/select_training_center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:dropDownVerticalOffset="35dp"
        android:dropDownWidth="match_parent"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:spinnerMode="dialog"/>

<!--    <EditText
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/keyword_search" />
-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/out"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/show" />
        <Button
            android:layout_toRightOf="@+id/out"
            android:layout_toEndOf="@+id/out"
            android:id="@+id/backmain"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/back" />
    </RelativeLayout>


</LinearLayout>